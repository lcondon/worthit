<style id="criticKeyframe">
    @keyframes criticLoad {
        0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
        }
        100% {
            -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
        }
    }
</style>

<style id="criticSwitch">
    .progress.critic .progress-left .progress-bar {
        animation: criticLoad 1.5s linear forwards 1.8s;
    }
</style>

<style id="generalKeyframe">
    @keyframes generalLoad {
        0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
        }
        100% {
            -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
        }
    }
</style>

<style id="generalSwitch">
    .progress.general .progress-left .progress-bar {
        animation: generalLoad 1s linear forwards 1.8s;
    }
</style>

<style id="userKeyframe">
    @keyframes userLoad {
        0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
        }
        100% {
            -webkit-transform: rotate(36deg);
            transform: rotate(36deg);
        }
    }
</style>

<style id="userSwitch">
    .progress.users .progress-left .progress-bar {
        animation: userLoad 0.4s linear forwards 1.8s;
    }
</style>



<body id="movieColorNeutral" class="whiteTxt" score = "{{movies.info.differential}}">

    <nav class="navbar nav" id="contentPageHeader">
        <span>
            <a href="/">
                <img id="headerImg" src="/images/worthitinverted.png">
            </a>
        </span>
        <div class="ml-auto no-gutters" id="searchBarHeader">
						<div class="input-group input-group-lg">
							<div class="input-group-prepend" id="searchBlackDiv">
								<span id="searchBlackIcon" class="input-group-text" id="inputGroup-sizing-lg">
									<i class="fa fa-search fa-fw"></i>
								</span>
							</div>
							<input id="searchBlack" type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm" placeholder="Search for a Movie">
						</div>
					</div>
        <span class="margin-navspace">
            <a href="/login">
                <img id="loginButton" src="/images/plus.png">
            </a>
        </span>
    </nav>


    <div class="container-fluid">
        <div class="row" id="reviewRow">
            <div class="col-md-2"></div>
            <div class="col-md-3 col-sm-12 justify-content-center">
                <span="imageBox">
                    <i id="" class="fas fa-star favStar" movie="{{movies.info.id}}"></i>
                    <img id="limitImage" src="{{movies.info.poster}}" class="center-block img-fluid" alt="Responsive image">
                    </span>
            </div>
            <div class="col-md-5">
                <h1 class="nowrap">{{movies.info.title}}</h1>&nbsp
                <h4 class="nowrap">{{movies.info.year}}</h4>
                <hr>
                <div class="row">
                    <div class="col-4 text-center">

                        <div class="progress critic">
                            <span class="progress-left">
                                <span class="progress-bar"></span>
                            </span>
                            <span class="progress-right">
                                <span class="progress-bar"></span>
                            </span>
                            <div class="progress-value" id="criticCircle" score="{{movies.info.ratings.critic}}">%</div>
                        </div>
                        <p class = "label">Critic Rating</p>


                    </div>

                    <div class="col-4 text-center">

                        <div class="progress general">
                            <span class="progress-left">
                                <span class="progress-bar"></span>
                            </span>
                            <span class="progress-right">
                                <span class="progress-bar"></span>
                            </span>
                            <div class="progress-value" id="generalCircle" score="{{movies.info.ratings.general}}">%</div>
                        </div>
                        
                        <p class = "label">General Rating</p>

                    </div>

                    <div class="col-4 text-center">

                        <div class="progress users">
                            <span class="progress-left">
                                <span class="progress-bar"></span>
                            </span>
                            <span class="progress-right">
                                <span class="progress-bar"></span>
                            </span>
                            <div class="progress-value" id="userCircle" score="{{movies.info.ratings.worthit}}">%</div>
                        </div>
                        <p class = "label">Our Rating</p>
                    </div>
                </div>
                <hr>
                <div class="row" id="movieInfo">
                    <p class="nowrap" id="biggerTxt">Directed by {{movies.info.director}}</p>&emsp;&emsp;
                    <p>{{movies.info.synopsis}}</p>
                    <p class="nowrap" id="starringTxt">Starring: {{movies.info.actors}}</p>&emsp;&emsp;
                </div>

            </div>
            <div class="col-sm-2"></div>
        </div>
        <hr>


        <div class="row" id="reviewRow">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <div class="status-upload d-inline">
                    <form class="d-inline">
                        <div class="form-group text-center">
                            <div class="d-inline">
                                <input id="question1" name="question" type="radio" class="with-thumbsup" value="" />
                                <label for="question1"></label>
                            </div>
                            <p class="nowrap" id="labelPInput">Worth it?</p>
                            <div class="d-inline">
                                <input id="question2" name="question" type="radio" class="with-thumbsdown" value="" />
                                <label for="question2"></label>
                            </div>
                        </div>

                        <textarea class="w-100" id="tallerComments" placeholder="Did you think this movie was Worth it?"></textarea>
                        <button type="submit" class="btn btn-success green commentBtn" id="btn-apple">
                            <i class="fa fa-share"></i> Share</button>
                    </form>
                </div>
                <!-- Status Upload  -->
            </div>
            <!-- <div class="col-sm-2">
                    <p>Let other users know what you thought of this movie!</p>
                </div> -->
            <div class="col-sm-2"></div>
        </div>
        <div class="row" id="commentsRow">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <p>
                    <button class="btn btn-primary w-100" id="btn-blue" type="button" data-toggle="collapse" data-target="#commentsBox" aria-expanded="false"
                        aria-controls="commentsBox">
                        <i class="fas fa-comments"></i>&nbsp;Comments
                    </button>

                    <div class="collapse" id="commentsBox">

                        {{#each movies.comments}}

                        <div class="card card-body commentsBlack">
                            <div class="row">
                                <div class="commentAuthor">{{user_id}}</div>
                                <div class="commentText">{{comment}}</div>
                                <div class="commentVerdict">Verdict: <span id="commentVerdictOut">{{rating}}</span></div>
                            </div>
                        </div>

                        {{/each}}


                    </div>

            <div class="col-md-2"></div>


        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row align-self-center">
                <div class="col-md-2"></div>
                <div class="col-md-2"></div>
                <div class="col-md-2"></div>
                <div class="col-md-2"></div>
                <div class="col-md-2"></div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </footer>

